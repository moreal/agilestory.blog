---
import * as constants from "../../../shared/constants.ts";

export interface Props {
  prevPost?: { id: number; title: string } | null;
  nextPost?: { id: number; title: string } | null;
}

const { prevPost, nextPost } = Astro.props;
---

<nav class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  <div class="flex justify-between items-center">
    <div class="flex-1">
      {prevPost ? (
        <a 
          href={`/${prevPost.id}`}
          class="group flex items-center text-blue-600 hover:text-blue-800 transition-colors"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <div>
            <div class="text-xs text-gray-500 uppercase tracking-wide">{constants.PREVIOUS_POST_MESSAGE}</div>
            <div class="font-medium group-hover:underline">{prevPost.title}</div>
          </div>
        </a>
      ) : (
        <div class="text-gray-400">
          <div class="text-xs uppercase tracking-wide">{constants.PREVIOUS_POST_MESSAGE}</div>
          <div class="font-medium">이전 글이 없습니다</div>
        </div>
      )}
    </div>

    <div class="flex-1 text-right">
      {nextPost ? (
        <a 
          href={`/${nextPost.id}`}
          class="group flex items-center justify-end text-blue-600 hover:text-blue-800 transition-colors"
        >
          <div class="text-right">
            <div class="text-xs text-gray-500 uppercase tracking-wide">{constants.NEXT_POST_MESSAGE}</div>
            <div class="font-medium group-hover:underline">{nextPost.title}</div>
          </div>
          <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      ) : (
        <div class="text-gray-400">
          <div class="text-xs uppercase tracking-wide">{constants.NEXT_POST_MESSAGE}</div>
          <div class="font-medium">다음 글이 없습니다</div>
        </div>
      )}
    </div>
  </div>
</nav>