---
import YmdDate from "./YmdDate.astro";

export interface Props {
  id: string;
  title: string;
  snippet: string;
  createdAt: string;
}

const { id, title, snippet, createdAt } = Astro.props;
const createdAtDate = new Date(createdAt);
---

<article class="border-b border-gray-200 last:border-b-0 pb-4 last:pb-0">
  <a 
    href={`/${id}`}
    class="block hover:bg-gray-50 p-3 rounded-md transition-colors"
  >
    <h3 class="text-lg font-medium text-gray-900 mb-2 hover:text-blue-600">
      {title}
    </h3>
    
    {snippet && (
      <div class="text-gray-600 mb-2 leading-relaxed">
        <span set:html={snippet} />
      </div>
    )}
    
    <div class="text-sm text-gray-500">
      <YmdDate date={createdAtDate} />
    </div>
  </a>
</article>